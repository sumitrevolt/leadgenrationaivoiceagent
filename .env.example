# AI Voice Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="AI Voice Agent"
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/voice_agent_db
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI MODELS
# ===========================================
# OpenAI (GPT-4)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ===========================================
# SPEECH-TO-TEXT
# ===========================================
# Deepgram (Recommended)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Google Cloud Speech (Alternative)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ===========================================
# TEXT-TO-SPEECH
# ===========================================
# ElevenLabs (Recommended for natural voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Azure Neural Voice (Alternative)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=centralindia

# ===========================================
# TELEPHONY
# ===========================================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/webhooks/twilio

# Exotel (India)
EXOTEL_SID=your-exotel-sid
EXOTEL_TOKEN=your-exotel-token
EXOTEL_SUBDOMAIN=your-subdomain
EXOTEL_CALLER_ID=your-caller-id

# ===========================================
# LEAD SCRAPING
# ===========================================
# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Proxy (for scraping)
PROXY_URL=http://user:pass@proxy:port
USE_PROXY=false

# ===========================================
# INTEGRATIONS - CRM
# ===========================================
# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key

# Zoho CRM
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# ===========================================
# INTEGRATIONS - GOOGLE SHEETS
# ===========================================
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
DEFAULT_SPREADSHEET_ID=your-spreadsheet-id

# ===========================================
# INTEGRATIONS - WHATSAPP
# ===========================================
WHATSAPP_BUSINESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# ===========================================
# INTEGRATIONS - EMAIL
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# ===========================================
# COMPLIANCE
# ===========================================
DND_API_URL=https://api.dnd-check.in
DND_API_KEY=your-dnd-api-key
ENABLE_DND_CHECK=true

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# CALL SETTINGS
# ===========================================
MAX_CALL_DURATION_SECONDS=300
MAX_CONCURRENT_CALLS=10
CALL_RETRY_ATTEMPTS=3
CALL_RETRY_DELAY_MINUTES=30
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
TIMEZONE=Asia/Kolkata
