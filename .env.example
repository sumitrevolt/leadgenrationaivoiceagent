# AI Voice Agent - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="AI Voice Agent"
APP_ENV=development  # development, staging, production
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-min-32-chars

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/voice_agent_db
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI MODELS - Configure at least one LLM
# ===========================================
# Google Gemini (Recommended - best value for India)
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=asia-south1

# OpenAI (Alternative)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Default LLM to use: gemini-1.5-flash, gpt-4o, claude-3-opus, vertex-gemini
DEFAULT_LLM=gemini-1.5-flash

# ===========================================
# SPEECH-TO-TEXT (Required)
# ===========================================
# Deepgram (Recommended - best for Indian accents)
DEEPGRAM_API_KEY=your-deepgram-api-key
DEFAULT_STT=deepgram

# ===========================================
# TEXT-TO-SPEECH
# ===========================================
# ElevenLabs (Best quality, but paid)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Azure Neural Voice (Good for Hindi)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=centralindia

# Edge TTS is FREE and used by default
DEFAULT_TTS=edge  # edge (free), elevenlabs, azure

# ===========================================
# TELEPHONY (Required - choose one)
# ===========================================
# Twilio (International)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/webhooks/twilio

# Exotel (India-specific, recommended for local calls)
EXOTEL_SID=your-exotel-sid
EXOTEL_TOKEN=your-exotel-token
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_SUBDOMAIN=your-subdomain
EXOTEL_CALLER_ID=your-caller-id

DEFAULT_TELEPHONY=twilio  # twilio, exotel

# ===========================================
# LEAD SCRAPING
# ===========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
PROXY_URL=http://user:pass@proxy:port
USE_PROXY=false

# ===========================================
# CRM INTEGRATIONS
# ===========================================
# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key

# Zoho CRM
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
DEFAULT_SPREADSHEET_ID=your-spreadsheet-id

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
WHATSAPP_BUSINESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# ===========================================
# EMAIL NOTIFICATIONS
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# ===========================================
# COMPLIANCE (India-specific)
# ===========================================
DND_API_URL=https://api.dnd-check.in
DND_API_KEY=your-dnd-api-key
ENABLE_DND_CHECK=true

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# CALL SETTINGS
# ===========================================
MAX_CALL_DURATION_SECONDS=300
MAX_CONCURRENT_CALLS=10
CALL_RETRY_ATTEMPTS=3
CALL_RETRY_DELAY_MINUTES=30
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
TIMEZONE=Asia/Kolkata

# ===========================================
# SUPPORT CONTACT SETTINGS
# ===========================================
SUPPORT_PHONE_NUMBER=+919876543210
SUPPORT_WHATSAPP_NUMBER=+919876543210
SUPPORT_EMAIL=support@leadgenai.com
PLATFORM_WEBSITE_URL=https://app.leadgenai.com

# ===========================================
# PLATFORM SETTINGS
# ===========================================
AUTO_START_PLATFORM=false  # Set to true in production
PLATFORM_COMPANY_NAME=LeadGen AI Solutions

# ===========================================
# SUBSCRIPTION PRICING (INR)
# ===========================================
TRIAL_DURATION_DAYS=7
TRIAL_CALLS_LIMIT=100
STARTER_MONTHLY_PRICE=15000
GROWTH_MONTHLY_PRICE=25000
ENTERPRISE_MONTHLY_PRICE=50000

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe (International payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay (India payments - recommended for INR)
RAZORPAY_KEY_ID=rzp_test_your-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Payment Settings
DEFAULT_CURRENCY=INR
AUTO_DETECT_PAYMENT_GATEWAY=true

# ===========================================
# JWT / AUTHENTICATION (Required)
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# SECURITY
# ===========================================
CORS_ORIGINS=["https://app.yourdomain.com","http://localhost:5173"]
RATE_LIMIT_PER_MINUTE=100
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# ===========================================
# GOOGLE CLOUD STORAGE
# ===========================================
GCS_BUCKET_NAME=auraleads-storage
GCS_PROFILE_PICTURES_BUCKET=auraleads-profile-pictures
